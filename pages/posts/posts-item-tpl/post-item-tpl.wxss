.post-list .post-item {
  margin: 20rpx 0;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd; 
}

.user-info {
  display: flex;
  align-items: center;
  margin: 10rpx 0 20rpx 10rpx;
}

.user-info image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%; 
}

.user-info text {
  font-size: 24rpx;
  margin-left: 20rpx;
}

.post-title {
  margin-left: 10rpx;
  color: #333;
}
.post-title text {
  font-weight: bold;
  font-size: 36rpx;
}
.post-pic {
  width: 100%;
  height: 350rpx;
  margin: 20rpx 0 10rpx;
}

.post-desc {
  font-size: 30rpx;
  color: #424242;
  letter-spacing: 3rpx;
  margin: 20rpx 10rpx; 
}

.post-info {
  display: flex;
  align-content: center;
}

.post-info image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx; 
}

.post-info text {
  font-size: 28rpx;
}