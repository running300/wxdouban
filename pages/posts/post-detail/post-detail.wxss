/* pages/posts/post-detail/post-detail.wxss */
.container {
  position: relative;
  display: flex;
  flex-direction: column;
}

.container .poster {
  width: 100%;
  height: 500rpx;
}

.container .audio-btn {
  position: absolute;
  top: 140rpx;
  left: 290rpx;
  width: 200rpx;
  height: 200rpx;
  opacity: 0.7;
}

.container .news-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 20rpx;
}

.container .news-info .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}
.container .news-info .author {
  font-size: 28rpx;
  margin-left: 20rpx;
}

.container .news-info .date{
  font-size: 24rpx;
  margin-left: 20rpx;
}

.container .title {
  font-size: 40rpx;
  margin: 10rpx 20rpx 0;
}

.container .news-icons image{
  float: right;
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
  margin-top: 10rpx;
}

.container .desc {
  margin: 10rpx 20rpx 0;
  font-size: 28rpx;
}