@import '../star-tpl/star-tpl.wxss';
.container{
  display: flex;
  flex-direction: column;
}
.container .post-img {
  width: 100%;
  height: 300rpx;
  filter: blur(1px);
}

.container .post-img-info {
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  background-color: orange;
  /* opacity: .6; */
}
.container .post-img-info .poster-title {
  font-size: 20px;
  color: #fff;
  font-weight: bold;
  margin-top: 50rpx;
  margin-left: 50rpx;
}

.container .post-img-info .poster-subtitle {
  font-size: 26rpx;
  color: #fff;
  margin-top: 40rpx;
  margin-left: 40rpx;
}

.container .post-img-info .like-area{
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.post-img-info .like-area .poster-text-active{
  color: #8f2828;
  font-size: 24rpx;
  margin-right: 15rpx;
}

.post-img-info .like-area .poster-text {
  color: #666;
  font-size: 24rpx;
   margin-right: 30rpx;
}

.container .movie-img {
  position: absolute;
  top: 150rpx;
  right: 30rpx;
  width: 180rpx;
  height: 240rpx;
}

.container .desc-area {
  margin-top: 40rpx;
  margin-left: 40rpx;
  color: #424242;
}

.desc-area .origina-title {
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}
.desc-area .flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 15rpx;
  font-size: 24rpx;
}
.desc-area .flex-row .mark {
  margin-right: 30rpx;
  white-space: nowrap;
}

.summary-area {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
}

.summary-area .summary-title {
  font-size: 30rpx;
}
.summary-area .summary-content {
  font-size: 24rpx;
  margin-top: 20rpx;
  text-indent: 2em;
}
.line {
  width: 100%;
  height: 1px;
  background-color: #ddd;
  margin: 20rpx 0;
}

.cast-area {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-top: 40rpx;
}

.cast-area .cast-title {
  font-size: 30rpx;
  margin-bottom: 15rpx; 
}
.cast-area .cast-list{
  white-space: nowrap;
}
.cast-area .cast-list .cast-container{
  display: inline-flex;
  flex-direction: column;
  width: 170rpx;
  margin-right: 40rpx;
  margin-bottom: 50rpx;
  white-space: normal;
  text-align: center;
}
.cast-area .cast-list .cast-container .cast-avatar {
  width: 170rpx;
  height: 200rpx;
}

.cast-area .cast-list .cast-container .cast-name {
  font-size: 24rpx;
  margin-top: 10rpx auto 0;
}


