page {
  background-color: #ffffe0;
}
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.container image {
  width: 200rpx; 
  height: 200rpx;
  border-radius: 50%; 
  margin-top: 50rpx;
}
.username {
  font-size: 32rpx;
  font-weight: bold;
}

.motto-wrapper {
  width: 220rpx;
  height: 70rpx;
  margin-top: 180rpx;
  color: #ffc300;
  border: 1px solid #ffc300;
  text-align: center;
  border-radius: 10rpx;
}

.motto {
  font-size: 24rpx;
  line-height: 70rpx;
  color: #ffc300;
}

